{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "description": "Next.js boilerplate with husky, lint-staged, eslint + prettier, jest, react-testing-library, storybook, ghaction and plop.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,json}\"",
    "lint": "next lint",
    "eslint:format": "eslint src --fix",
    "test": "jest test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:check": "npx storybook@latest doctor",
    "postinstall": "husky install",
    "generate": "yarn plop --plopfile ./.plop/plopfile.js",
    "commit": "cz"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "0.9.2",
    "clsx": "2.1.0",
    "global": "^4.4.0",
    "next": "14.1.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "2.3.0",
    "yarn": "^1.22.22",
    "zod": "3.23.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.0.3",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.1.4",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/blocks": "^8.0.5",
    "@storybook/nextjs": "^8.0.5",
    "@storybook/react": "^8.0.5",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "15.0.7",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.12",
    "@types/react": "18.2.75",
    "@types/react-dom": "18.2.24",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "10.4.19",
    "babel-jest": "29.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "6.2.2",
    "husky": "9.0.10",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "lint-staged": "15.2.2",
    "pinst": "3.0.0",
    "plop": "4.0.1",
    "postcss": "8.4.38",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.13",
    "storybook": "^8.0.5",
    "tailwind-scrollbar": "3.0.5",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn prettier:format",
      "yarn eslint:format"
    ]
  }
}
